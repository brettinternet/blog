{
  "name": "brettinternet.github.io",
  "private": true,
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "prestart": "run-s clean",
    "start": "run-p start:*",
    "start:eleventy": "eleventy --config config/eleventy.js --quiet --watch",
    "start:rollup": "rollup -c config/rollup.js -w",
    "build": "run-s clean build:eleventy build:rollup",
    "build:eleventy": "cross-env NODE_ENV=production eleventy --config config/eleventy.js",
    "build:rollup": "rollup -c config/rollup.js",
    "clean": "ts-node -P bin/tsconfig.json bin/clean",
    "feed": "cross-env NODE_ENV=production ts-node -P bin/tsconfig.json bin/feed",
    "gifs": "ts-node -P bin/tsconfig.json bin/gifs",
    "deploy": "gh-pages -d build -b master",
    "lint": "run-s lint:*",
    "lint:scripts": "eslint '*/**/*.{js,ts}'",
    "lint:styles": "stylelint -s sass 'src/styles/**/*.sass'",
    "commit": "git-cz"
  },
  "dependencies": {
    "feather-icons": "^4.28.0",
    "lazysizes": "^5.2.2",
    "lodash": "^4.17.20",
    "tailwindcss": "^1.8.4",
    "@fontsource/fira-code": "^1.1.4",
    "@fontsource/lato": "0.0.75",
    "@fontsource/patua-one": "0.0.71",
    "@fontsource/roboto-slab": "^1.1.4"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.0",
    "@11ty/eleventy-cache-assets": "^2.0.3",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.1",
    "@ampproject/toolbox-optimizer": "^2.7.4",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@prettier/plugin-pug": "^1.5.1",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/fs-extra": "^9.0.1",
    "@types/jsdom": "^16.2.4",
    "@types/lodash": "^4.14.161",
    "@types/node": "^14.6.4",
    "@types/sharp": "^0.26.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "autoprefixer": "^9.8.6",
    "commitizen": "^4.2.1",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-node": "^11.1.0",
    "feed": "^4.2.1",
    "husky": "^4.2.5",
    "jsdom": "^16.4.0",
    "lint-staged": "^10.3.0",
    "markdown-it": "^11.0.1",
    "markdown-it-anchor": "^5.3.0",
    "markdown-it-footnote": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.2",
    "postcss-discard-comments": "^4.0.2",
    "prettier": "^2.1.1",
    "purgecss": "^3.1.3",
    "rollup": "^2.35.1",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.32.0",
    "sass-loader": "^10.0.2",
    "sharp": "^0.26.0",
    "stylelint": "^13.7.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/scripts/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/styles/**/*.sss": [
      "stylelint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not IE_Mob 11",
    "maintained node versions"
  ]
}
